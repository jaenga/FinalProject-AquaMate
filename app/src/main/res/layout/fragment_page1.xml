<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#FFFFFF">

    <!-- 인사 이모지 -->
    <TextView
        android:id="@+id/greetingIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="👋"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nicknamePrompt"
        app:layout_constraintVertical_bias="0.6" />

    <!-- 닉네임 입력 안내 메시지 -->
    <TextView
        android:id="@+id/nicknamePrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="반가워요!\n당신의 닉네임을\n입력해주세요 ٩(๑❛ᴗ❛๑)۶"
        android:fontFamily="@font/gangwon_edu_light"
        android:textSize="24sp"
        android:textColor="#1A1A1A"
        android:gravity="center"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <!-- 닉네임 입력 박스 (EditText 포함) -->
    <LinearLayout
        android:id="@+id/nicknameContainer"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/nickname_input_background"
        android:padding="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/nicknamePrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 실제 닉네임 입력 필드 -->
        <EditText
            android:id="@+id/nicknameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임을 입력하세요"
            android:inputType="textPersonName"
            android:background="@null"
            android:fontFamily="@font/gangwon_edu_light"
            android:textSize="20sp"
            android:textColorHint="#999999"
            android:textColor="#1A1A1A"
            android:gravity="center"
            android:minHeight="56dp"
            android:maxLength="12" />

        <!-- 입력창 아래 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp" />

        <!-- 닉네임 입력 조건 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한글, 영문, 숫자 사용 가능 (최대 12자)"
            android:textSize="14sp"
            android:fontFamily="@font/gangwon_edu_light"
            android:textColor="#888888"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- 하단 안내 설정에서 변경 가능 소개 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✨ 언제든지 설정에서 변경할 수 있어요"
        android:textSize="16sp"
        android:fontFamily="@font/gangwon_edu_light"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/nicknameContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>