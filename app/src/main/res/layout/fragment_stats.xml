<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- 전체 콘텐츠를 세로로 정렬 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 주간 통계 카드 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stats_card_bg"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <!-- 섹션 타이틀 -->
            <TextView
                android:id="@+id/textWeekly"
                android:text="이번 주 수분 섭취 통계"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/gangwon_edu_light"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- 타이틀 밑 구분선 -->
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginBottom="16dp" />

            <!-- 주간 수분 섭취 바 차트 -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/weeklyChart"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="8dp" />

            <!-- 하단 부연 설명 -->
            <TextView
                android:text="지난 7일간의 일일 수분 섭취량"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="@font/gangwon_edu_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 시간대별 섭취 통계 카드 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stats_card_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <!-- 섹션 타이틀 -->
            <TextView
                android:id="@+id/textHourly"
                android:text="오늘 시간대별 섭취 통계"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/gangwon_edu_light"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- 타이틀 밑 구분선 -->
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginBottom="16dp" />

            <!-- 시간대별 수분 섭취 바 차트 -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/hourlyChart"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="8dp" />

            <!-- 부연 설명 -->
            <TextView
                android:text="24시간 동안의 시간대별 수분 섭취 패턴"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="@font/gangwon_edu_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 요약 카드: 주간 평균 + 목표 달성율 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- 주간 평균 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/summary_card_bg"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:text="주간 평균"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/gangwon_edu_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/weeklyAverage"
                    android:text="1,850ml"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gangwon_edu_light"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 목표 달성율 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/summary_card_bg"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <TextView
                    android:text="목표 달성율"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/gangwon_edu_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/achievementRate"
                    android:text="92.5%"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/gangwon_edu_light"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
