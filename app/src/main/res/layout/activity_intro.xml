<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 온보딩 콘텐츠를 좌우 스와이프 방식으로 구성한 ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pageIndicator" />

    <!-- 하단 페이지 인디케이터 -->
    <LinearLayout
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp">

        <!-- 첫 번째 점 (활성) -->
        <View
            android:id="@+id/indicator0"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/page_indicator_active"
            android:layout_marginEnd="8dp" />

        <!-- 두 번째 점 (비활성) -->
        <View
            android:id="@+id/indicator1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/page_indicator_inactive"
            android:layout_marginEnd="8dp" />

        <!-- 세 번째 점 (비활성) -->
        <View
            android:id="@+id/indicator2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/page_indicator_inactive" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>