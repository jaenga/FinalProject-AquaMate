<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#FFFFFF">

    <!-- 물방울 아이콘 -->
    <TextView
        android:id="@+id/waterIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💧"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@id/goalPrompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.532" />

    <!-- 수분 목표 입력 안내 -->
    <TextView
        android:id="@+id/goalPrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/gangwon_edu_light"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="오늘 목표 수분 섭취량을\n입력해주세요!\n\n(권장량: 2000ml)"
        android:textAlignment="center"
        android:textColor="#1A1A1A"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368" />

    <!-- 수분 목표 입력 필드 -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_container_background"
        android:padding="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/goalPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 수분 목표 입력창 -->
        <EditText
            android:id="@+id/goalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2000"
            android:textSize="28sp"
            android:fontFamily="@font/gangwon_edu_bold"
            android:inputType="number"
            android:background="@null"
            android:textColorHint="#999999"
            android:textColor="#1A1A1A"
            android:gravity="center"
            android:minHeight="56dp"
            android:maxLength="5" />

        <!-- 단위 ml -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ml"
            android:textSize="17sp"
            android:fontFamily="@font/gangwon_edu_light"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- 목표량 저장 및 시작 버튼 (굵은 글씨 강조!) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:text="시작하기!"
        android:textSize="20sp"
        android:fontFamily="@font/gangwon_edu_bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/start_button_background"
        android:layout_marginTop="40dp"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/inputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 하단 안내 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💡 나중에 설정에서 변경할 수 있어요"
        android:textSize="14sp"
        android:fontFamily="@font/gangwon_edu_light"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/startButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>